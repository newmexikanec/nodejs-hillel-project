<%- include('header'); -%>
    <main class="form-signin vh-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <form method="post" action="/auth/login" class="text-center">
                <a href="/">
                    <img class="mb-3" src="/assets/logo.svg" width="48" height="48">
                </a>
                <div class="form-floating">
                    <input type="email" class="form-control input-header" id="email" name="email" value="<%=email %>" required>
                    <label for="email">E-mail</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control input-footer" id="password" name="password" required>
                    <label for="password">Password</label>
                </div>
                <% if (errorMessage) { %>
                    <h6 class="alert alert-danger"><%= errorMessage %></h6>
                <% } %>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Log in</button>
            </form>
        </div>
    </main>
<%- include('footer'); -%>
